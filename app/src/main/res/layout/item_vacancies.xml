<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

<androidx.constraintlayout.widget.ConstraintLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/grey2">

<ImageView
    android:id="@+id/favorite_img"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_favorites_black" />

<TextView
    android:id="@+id/looking_now"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:text="Сейчас просматривают -"
    android:textColor="@color/green"
    android:fontFamily="@font/sfprodisplaymedium"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/speciality"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="Профессия"
    android:textColor="@color/white"
    app:layout_constraintStart_toStartOf="@+id/looking_now"
    app:layout_constraintTop_toBottomOf="@+id/looking_now"
    android:textSize="25dp" />

<TextView
    android:id="@+id/city"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="Город"
    android:textColor="@color/white"
    app:layout_constraintStart_toStartOf="@+id/speciality"
    app:layout_constraintTop_toBottomOf="@+id/speciality" />

<TextView
    android:id="@+id/company"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="Компания"
    android:textColor="@color/white"
    app:layout_constraintStart_toStartOf="@+id/city"
    app:layout_constraintTop_toBottomOf="@+id/city" />

<ImageView
    android:id="@+id/imageView2"
    android:layout_width="20dp"
    android:layout_height="19dp"
    android:layout_marginStart="4dp"
    app:layout_constraintBottom_toBottomOf="@+id/company"
    app:layout_constraintStart_toEndOf="@+id/company"
    app:layout_constraintTop_toTopOf="@+id/company"
    app:srcCompat="@drawable/chech_mark" />

<ImageView
    android:id="@+id/work_image"
    android:layout_width="19dp"
    android:layout_height="19dp"
    app:layout_constraintStart_toStartOf="@+id/company"
    app:layout_constraintTop_toTopOf="@+id/work_experience"
    app:srcCompat="@drawable/work_experience" />

<TextView
    android:id="@+id/work_experience"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:text="Опыт работы"
    android:textColor="@color/white"
    app:layout_constraintStart_toEndOf="@+id/work_image"
    app:layout_constraintTop_toBottomOf="@+id/company" />

<TextView
    android:id="@+id/publishedDate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="Дата публикации"
    android:textColor="@color/grey3"
    app:layout_constraintStart_toStartOf="@+id/work_image"
    app:layout_constraintTop_toBottomOf="@+id/work_experience" />

<ImageButton
    android:id="@+id/respond"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/big_button"
    android:contentDescription="откликнуться"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="@+id/publishedDate"
    app:layout_constraintTop_toBottomOf="@+id/publishedDate"
    tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
